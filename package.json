{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "pretest": "eslint packages",
    "format": "lerna run format",
    "test": "lerna run test",
    "clean": "lerna run clean",
    "build": "lerna run build",
    "fix:eslint": "lerna run fix:eslint",
    "publish:lerna": "lerna publish -y --canary --preid alpha --dist-tag=alpha",
    "update-version": "lerna publish --skip-git --skip-npm --force-publish '*'",
    "check-packages": "yarn clean && yarn compile && yarn test && yarn lint",
    "publish:alpha": "lerna publish -y --canary --preid alpha --npm-tag=alpha --force-publish=*",
    "publish:minor": "lerna publish -y --canary minor --preid alpha --npm-tag=alpha --force-publish=*"
  },
  "devDependencies": {
    "@lerna/bootstrap": "^3.20.0",
    "@types/jest": "^24.9.1",
    "@typescript-eslint/eslint-plugin": "^2.13.0",
    "@typescript-eslint/parser": "^2.13.0",
    "eslint": "^6.8.0",
    "eslint-config-defaults": "9.0.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-import": "2.22.0",
    "eslint-plugin-jest": "23.17.1",
    "eslint-plugin-prettier": "3.1.4",
    "eslint-plugin-unused-imports": "0.1.3",
    "npm-run-all": "4.1.5",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "jest-mock-extended": "^1.0.8",
    "lerna": "^3.20.2",
    "lint-staged": "^10.0.7",
    "npm-ci": "^0.0.2",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.0",
    "ts-jest": "^25.2.0",
    "ts-node": "^8.6.2",
    "typescript": "^3.8.2",
    "yarn": "^1.22.0"
  },
  "dependencies": {
    "cache-tools": "file:packages/cache-tools",
    "concurrent-tools": "file:packages/concurrent-tools",
    "logging-tools": "file:packages/logging-tools"
  },
  "version": "0.0.1-alpha.14",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js}": "eslint --fix",
    "*.{ts,js,md,yaml,yml,json}": "prettier --write --config .prettierrc.yaml"
  }
}
